<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task_card_completeUnit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:paddingBottom="6dp"
    app:cardBackgroundColor="#00BCD4"
    app:cardCornerRadius="18dp"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/task_completed_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/task_description_textBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="#185860"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/task_completed_checkBox"
            app:layout_constraintStart_toEndOf="@+id/task_completed_checkBox"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="example display" />

        <TextView
            android:id="@+id/task_priority_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="#FFFFFF"
            android:paddingHorizontal="8sp"
            android:paddingVertical="2sp"
            android:shadowColor="@color/textShadowColor"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0.25"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TEST" />

        <TextView
            android:id="@+id/repeatability_text_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/task_completed_checkBox"
            app:layout_constraintTop_toBottomOf="@id/task_description_textBox"
            tools:text="test" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>